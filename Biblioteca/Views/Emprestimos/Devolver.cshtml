@model Biblioteca.Models.Emprestimo

@{
    ViewData["Title"] = "Devolver";
}

<h1>Devolver</h1>

<h3>Deseja mesmo fazer a devolução?</h3>
<div>
    <h4>Emprestimo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Livro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Livro.Nome)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Emprestado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Emprestado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrevisaoDevolucao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrevisaoDevolucao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Devolucao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayName(Model.Devolucao == null ? "Não devolvido" : string.Format("{0:dd/MM/yyyy}", Model.Devolucao))
        </dd>
    </dl>
    
    <form asp-action="Devolver">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Devolver" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
